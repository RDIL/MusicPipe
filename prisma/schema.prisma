generator client {
    provider = "prisma-client-js"
    output   = "../src/api-generated"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id            String  @id @default(cuid())
    username      String  @unique
    password      String  @default("")

    // fields that don't actually do anything but fix some undefined errors with next-auth
    name          String  @default("")
    email         String  @default("")
    image         String  @default("")
}

model Album {
    id               String   @id @default(cuid())
    title            String
    primaryArtistIds String[]
    tracklistIds     String[]
}

model Artist {
    id      String   @id @default(cuid())
    name    String
    aliases String[] @default([])
}

model Song {
    id    String @id @default(cuid())
    title String

    primaryArtistIds  String[]
    writerIds         String[]
    producerIds       String[]
    featuredArtistIds String[]
}
